<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity"
    android:id="@+id/root_layout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:measureWithLargestChild="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:id="@+id/logo_group">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:adjustViewBounds="false"
            android:src="@drawable/logo"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_enter_your_email"
        android:id="@+id/text_name"
        android:layout_below="@+id/logo_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/Name"
        android:layout_below="@+id/text_name"
        android:layout_alignLeft="@+id/text_name"
        android:layout_alignStart="@+id/text_name"
        android:layout_alignRight="@+id/text_name"
        android:layout_alignEnd="@+id/text_name"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textCursorDrawable="@null"
        android:textColor="#000000"
        android:background="@color/pressed_color"
        android:minHeight="40dp"
        android:hint="@string/text_email_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/Password"
        android:layout_below="@+id/Name"
        android:layout_alignLeft="@+id/text_name"
        android:layout_alignStart="@+id/text_name"
        android:layout_alignRight="@+id/text_name"
        android:layout_alignEnd="@+id/text_name"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textCursorDrawable="@null"
        android:textColor="#000000"
        android:background="@color/pressed_color"
        android:minHeight="40dp"
        android:hint="@string/text_password_label"
        android:inputType="textPassword" />

    <RelativeLayout android:id="@+id/button_group"
        android:layout_width="match_parent" android:layout_height="60dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/button_selector" android:orientation="horizontal"
        tools:ignore="UselessParent"
        android:layout_alignParentBottom="true"
        android:gravity="center">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/button_image"
            android:src="@drawable/arow"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:layout_gravity="top"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
