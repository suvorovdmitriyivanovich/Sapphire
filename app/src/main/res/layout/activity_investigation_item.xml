<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:id="@+id/top_group">

        <RelativeLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:background="@drawable/top_button">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/back_icon"
                android:src="@drawable/back_icon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/text_header"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="61dp"
            android:layout_marginRight="61dp"
            android:text="@string/text_investigation_item"
            android:singleLine="true" />

        <RelativeLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:id="@+id/ok"
            android:background="@drawable/top_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ok_icon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ok_icon" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/top_group"
        android:text="@string/name"
        android:id="@+id/text_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:inputType="text"
        android:id="@+id/name"
        android:hint="@string/name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/name"
        android:text="@string/name_error"
        android:id="@+id/text_name_error"
        android:layout_marginLeft="12dp"
        android:textColor="@color/red"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_description"
        android:id="@+id/text_description"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_name_error" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_description"
        android:inputType="text"
        android:id="@+id/description"
        android:hint="@string/text_description"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_date"
        android:id="@+id/text_date"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/description"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_group"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/text_date">

        <EditText
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/date"
            android:gravity="center"
            android:focusable="false" />

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/image_date_group"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/date"
            android:layout_toEndOf="@+id/date"
            android:background="@drawable/dialog_button">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:id="@+id/image_date"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/date"/>
        </RelativeLayout>

        <EditText
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/time"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/image_date_group"
            android:layout_toEndOf="@+id/image_date_group"
            android:gravity="center"
            android:focusable="false" />

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/image_time_group"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/time"
            android:layout_toEndOf="@+id/time"
            android:background="@drawable/dialog_button">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:id="@+id/image_time"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/time" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/date_error"
        android:id="@+id/text_date_error"
        android:layout_marginLeft="12dp"
        android:textColor="@color/red"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/date_group"/>

</RelativeLayout>
